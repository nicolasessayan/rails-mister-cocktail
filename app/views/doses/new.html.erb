<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit "Add a dose", class: "btn btn-success" %>
<% end %>
<%= link_to "Back to #{@cocktail.name}", cocktail_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "Back to cocktail list", cocktails_path, class: "btn btn-primary" %>
