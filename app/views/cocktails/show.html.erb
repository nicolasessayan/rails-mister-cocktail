<h1><%= @cocktail.name %></h1>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%=dose.description%> de <%= dose.ingredient.name %> <%= link_to "Remove", cocktail_dose_path(@cocktail.id, dose.id), method: :delete %> </li>
  <% end %>
</ul>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
<%= link_to "Back to cocktail list", cocktails_path, class: "btn btn-primary" %>
